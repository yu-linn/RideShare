<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_driver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="project21.rideshareapp.RegisterDriverActivity">

    <TextView
        android:text="Register as a driver for:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:id="@+id/header"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="PLACEHOLDER EVENT TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingTop="3dp"
        android:layout_below="@+id/header"
        android:layout_alignParentStart="true"
        android:id="@+id/eventText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:background="@drawable/com_facebook_tooltip_black_background"
        android:id="@+id/barrier"
        android:layout_below="@+id/eventText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:background="@drawable/border_text"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:text=""
        android:ems="8"
        android:id="@+id/addressText"
        android:hint="Enter Full Address"
        android:layout_alignBaseline="@+id/addressLabel"
        android:layout_alignBottom="@+id/addressLabel"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Meeting Address: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:id="@+id/addressLabel"
        android:layout_below="@+id/barrier"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:background="@drawable/border_text"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:text=""
        android:ems="10"
        android:id="@+id/meetingDateText"
        android:hint="Click To Set Date"
        android:layout_alignBaseline="@+id/meetingDateLabel"
        android:layout_alignBottom="@+id/meetingDateLabel"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Meeting Date: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:id="@+id/meetingDateLabel"
        android:layout_below="@+id/addressLabel"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:background="@drawable/border_text"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:text=""
        android:ems="10"
        android:id="@+id/meetingTimeText"
        android:hint="Click To Set Time"
        android:layout_alignBaseline="@+id/meetingTimeLabel"
        android:layout_alignBottom="@+id/meetingTimeLabel"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Meeting Time: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:id="@+id/meetingTimeLabel"
        android:layout_below="@+id/meetingDateLabel"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@drawable/border_text"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:text="0"
        android:ems="9"
        android:id="@+id/seatsText"
        android:layout_alignBaseline="@+id/seatsLabel"
        android:layout_alignBottom="@+id/seatsLabel"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Available Seats:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@+id/meetingTimeLabel"
        android:layout_marginTop="20dp"
        android:id="@+id/seatsLabel"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@drawable/border_text"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:text=""
        android:ems="7"
        android:id="@+id/feeText"
        android:hint="CAN $"
        android:layout_alignBaseline="@+id/feeLabel"
        android:layout_alignBottom="@+id/feeLabel"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Fee Per Rider: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:id="@+id/feeLabel"
        android:layout_below="@+id/seatsLabel"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Message:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_below="@+id/seatsLabel"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:id="@+id/messageLabel" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:inputType="textMultiLine"
        android:background="@drawable/border_text"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAlignment="center"
        android:ems="11"
        android:id="@+id/messageText"
        android:layout_alignBaseline="@+id/messageLabel"
        android:layout_alignBottom="@+id/messageLabel"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Submit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messageText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/submitButton" />


</RelativeLayout>
